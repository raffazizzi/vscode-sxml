{
	"name": "sxml",
	"displayName": "Scholarly XML",
	"publisher": "raffazizzi",
	"description": "XML validator (RELAX NG and Schematron) and autocomplete with features typically needed by academic encoding projects.",
	"version": "0.4.0",
	"engines": {
		"vscode": "^1.103.2"
	},
	"icon": "images/sxml_logo.png",
	"categories": [
		"Linters",
		"Education",
		"Other"
	],
	"keywords": [
		"XML",
		"RELAX NG",
		"text encoding",
		"text encoding initiative",
		"PreTeXt",
		"digital humanities",
		"music encoding",
		"music encoding initiative",
		"ODD",
		"TEI",
		"MEI"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/raffazizzi/vscode-sxml"
	},
	"activationEvents": [
		"onLanguage:xml",
		"onLanguage:pretext",
		"onLanguage:odd"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sxml.validate",
				"title": "Validate XML with associated RELAX NG schema.",
				"category": "Scholarly XML",
				"icon": {
					"dark": "images/sxml_logo.svg",
					"light": "images/sxml_logo.svg"
				}
			},
			{
				"command": "sxml.wrapWithEl",
				"title": "Wrap selection with element",
				"category": "Scholarly XML"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+e",
				"mac": "cmd+e",
				"command": "sxml.wrapWithEl"
			},
			{
				"key": "cmd+e",
				"command": "sxml.wrapWithEl"
			}
		],
		"configuration": [
			{
				"title": "Scholarly XML",
				"properties": {
					"sxml.languagesToCheck": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"default": [
							"xml",
							"pretext"
						],
						"description": "Specify any additional languages on which Scholarly XML should activate."
					},
					"sxml.defaultSchemas": {
						"type": "object",
						"additionalProperties": {
							"type": "string"
						},
						"default": {
							"ptx": "https://raw.githubusercontent.com/PreTeXtBook/pretext/master/schema/pretext.rng",
							"odd": "https://vault.tei-c.org/P5/current/xml/tei/custom/schema/relaxng/tei_odds.rng"
						},
						"markdownDescription": "Dictionary of `\"language\": \"schema\"` to use as the default RELAX NG schema for files with that language or extension."
					},
					"sxml.xincludeSupport": {
						"type": "boolean",
						"additionalProperties": {
							"type": "string"
						},
						"default": true,
						"markdownDescription": "Toggle support for XInclude processing. If enabled, XIncludes will be resolved before validation and completion."
					},
					"sxml.xincludeDepth": {
						"type": "number",
						"default": 50,
						"markdownDescription": "Maximum depth level for XInclude processing."
					},
					"sxml.schematronSupport": {
						"type": "boolean",
						"additionalProperties": {
							"type": "string"
						},
						"default": true,
						"markdownDescription": "Toggle support for Schematron validation."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch"
	},
	"devDependencies": {
		"@types/vscode": "^1.104.0",
		"ts-loader": "^9.3.1",
		"typescript": "^5.9.2",
		"webpack": "^5.74.0",
		"webpack-cli": "^6.0.1",
		"xregexp": "4.3.0"
	},
	"dependencies": {
		"node-xsl-schematron": "^1.1.0",
		"salve-annos": "^1.2.4",
		"saxes": "^6.0.0"
	}
}
