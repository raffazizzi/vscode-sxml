{
	"name": "sxml",
	"displayName": "Scholarly XML",
	"publisher": "raffazizzi",
	"description": "XML validator (RELAX NG only) and autocomplete with features typically needed by academic encoding projects.",
	"version": "0.2.2",
	"engines": {
		"vscode": "^1.45.1"
	},
	"icon": "images/sxml_logo.png",
	"categories": [
		"Linters",
		"Other"
	],
	"keywords": [
		"XML",
		"RELAX NG",
		"text encoding",
		"text encoding initiative",
		"digital humanities",
		"music encoding",
		"music encoding initiative",
		"TEI",
		"MEI"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/raffazizzi/vscode-sxml"
	},
	"activationEvents": [
		"onCommand:sxml.validate",
		"onLanguage:xml"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sxml.validate",
				"title": "Validate XML with associated RELAX NG schema.",
				"category": "Scholarly XML",
				"icon": {
					"dark": "images/sxml_logo.svg",
					"light": "images/sxml_logo.svg"
				}
			},
			{
				"command": "sxml.wrapWithEl",
				"title": "Wrap selection with element",
				"category": "Scholarly XML"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+e",
				"mac": "cmd+e",
				"command": "sxml.wrapWithEl"
			},
			{
				"key": "cmd+e",
				"command": "sxml.wrapWithEl"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.39",
		"@types/vscode": "^1.45.1",
		"glob": "^7.1.5",
		"mocha": "^6.2.3",
		"ts-loader": "^7.0.5",
		"tslint": "^5.20.0",
		"typescript": "^3.9.2",
		"vscode-test": "^1.2.2",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"cross-fetch": "^3.1.5",
		"file-url": "^3.0.0",
		"salve-annos": "^1.1.0",
		"saxes": "^5.0.1"
	}
}
